# Core application metadata
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ZetaDAO Community Portal
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Supabase credentials
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_STORAGE_BUCKET=avatars
SUPABASE_SIGNED_URL_TTL=3600

# Image upload validation
IMAGE_ALLOWED_TYPES=image/jpeg,image/png,image/webp
AVATAR_MAX_MB=3
CONTENT_IMAGE_MAX_MB=5
NEXT_PUBLIC_DEFAULT_AVATAR_URL=https://example.com/default-avatar.png

# Admin wallets (comma-separated, lowercase)
ADMIN_WALLETS=0x1234...,0x5678...

# Blockchain configuration
NEXT_PUBLIC_ZETA_CHAIN_ID=7001
NEXT_PUBLIC_ZETA_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=demo-project-id

# Shop integration
NEXT_PUBLIC_SHOP_CONTRACT_ADDRESS=0xYourContract
NEXT_PUBLIC_SHOP_CHAIN_ID=7001

# OAuth providers (optional but recommended)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Tencent Cloud SES (email verification)
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_SES_REGION=ap-hongkong
TENCENT_SES_FROM=noreply@yourdomain.com
TENCENT_SES_TEMPLATE_ID=12345

# Optional integrations
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your-pinata-key
PINATA_SECRET_KEY=your-pinata-secret

# XP level configuration
NEXT_PUBLIC_XP_LEVEL_THRESHOLDS=0,100,300,600,1000,INF
