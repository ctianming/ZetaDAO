# Core application metadata
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ZetaDAO Community Portal
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Supabase credentials
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_STORAGE_BUCKET=avatars
SUPABASE_SIGNED_URL_TTL=3600

# Image upload validation
IMAGE_ALLOWED_TYPES=image/jpeg,image/png,image/webp
AVATAR_MAX_MB=3
CONTENT_IMAGE_MAX_MB=5
NEXT_PUBLIC_DEFAULT_AVATAR_URL=https://example.com/default-avatar.png

# Admin wallets (comma-separated, lowercase)
ADMIN_WALLETS=0x1234...,0x5678...

# Admin session security (用于签名挑战颁发的 httpOnly 管理员会话 Cookie)
# 必填：生产环境务必更换为足够复杂的随机字符串（>=32字符）
ADMIN_SESSION_SECRET=change-me-admin-session-secret

# Temporary emergency flag: when enabled the server will accept an address-only
# verification (no signature required). THIS REDUCES SECURITY and should only be
# used briefly for incident mitigation. Default: false
# Server-side only flag (do NOT expose this unless you understand the risk):
ADMIN_ALLOW_NO_SIGN=false

# Client-side toggle to enable the front-end no-sign flow. This must be set in
# your public env when you intentionally deploy the emergency mode.
NEXT_PUBLIC_ADMIN_ALLOW_NO_SIGN=false

# Blockchain configuration
NEXT_PUBLIC_ZETA_CHAIN_ID=7001
NEXT_PUBLIC_ZETA_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=demo-project-id

# Shop integration
NEXT_PUBLIC_SHOP_CONTRACT_ADDRESS=0xYourContract
NEXT_PUBLIC_SHOP_CHAIN_ID=7001

# OAuth providers (optional but recommended)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Tencent Cloud SES (email verification)
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_SES_REGION=ap-hongkong
TENCENT_SES_FROM=noreply@yourdomain.com
TENCENT_SES_TEMPLATE_ID=12345

# Optional integrations
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your-pinata-key
PINATA_SECRET_KEY=your-pinata-secret
# ISR / 路径再验证密钥（可选：仅当需要在服务端触发 /api/revalidate 时设置）
REVALIDATION_SECRET=change-me-revalidate

# XP level configuration
NEXT_PUBLIC_XP_LEVEL_THRESHOLDS=0,100,300,600,1000,INF

# Auto-refresh (client polling behavior)
# Enable/disable global auto refresh for client pages that opt-in
NEXT_PUBLIC_AUTO_REFRESH_ENABLED=true
# Polling interval in milliseconds (used by SWR or custom intervals)
NEXT_PUBLIC_SWR_REFRESH_MS=15000
# Revalidate when window/tab gains focus (for SWR-enabled pages)
NEXT_PUBLIC_SWR_REVALIDATE_ON_FOCUS=true
# Revalidate when network reconnects (for SWR-enabled pages)
NEXT_PUBLIC_SWR_REVALIDATE_ON_RECONNECT=true
