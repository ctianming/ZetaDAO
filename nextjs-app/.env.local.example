# Supabase Storage
# Bucket name for avatars/content images
SUPABASE_STORAGE_BUCKET=avatars
# Signed URL lifetime in seconds (for private buckets)
SUPABASE_SIGNED_URL_TTL=3600

# Public app URL used to compose proxy links (must match deployment origin)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Image upload validation
IMAGE_ALLOWED_TYPES=image/jpeg,image/png,image/webp
AVATAR_MAX_MB=3
CONTENT_IMAGE_MAX_MB=5
# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ZetaDAO Community Portal
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Admin Wallet Addresses (comma-separated)
ADMIN_WALLETS=0x1234...,0x5678...

# ZetaChain Configuration
NEXT_PUBLIC_ZETA_CHAIN_ID=7001
NEXT_PUBLIC_ZETA_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# NextAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Optional: IPFS for decentralized storage
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your-pinata-key
PINATA_SECRET_KEY=your-pinata-secret

# Tencent Cloud SES (for email verification)
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_SES_REGION=ap-hongkong
# Must be a verified sender in Tencent SES, e.g. noreply@yourdomain.com
TENCENT_SES_FROM=noreply@yourdomain.com

# Storage (for avatar uploads via Supabase Storage)
SUPABASE_STORAGE_BUCKET=avatars
NEXT_PUBLIC_DEFAULT_AVATAR_URL=https://example.com/default-avatar.png
